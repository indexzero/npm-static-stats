#!/usr/bin/env node

var fs = require('fs'),
    argv = require('optimist').argv,
    compStat = require('../index');

if (argv.h || argv.help) {
  console.log('usage: stat-summary -p [package]');
}

compStat.summary({
  data: require('../' + argv.p + '.json')
}, function (err, res) {
  if (err) {
    console.dir(err);
    if (err.stack) {
      console.dir(err.stack.split('\n'));
    }

    return process.exit(1);
  }

  console.dir(res);
})