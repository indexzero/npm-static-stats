#!/usr/bin/env node

var fs = require('fs'),
    path = require('path'),
    argv = require('optimist').argv,
    compStat = require('../index');

if (argv.h || argv.help) {
  console.log('usage: comp-stat -r [registry] -p [package]');
}

compStat.summary({
  package: argv.p,
  registry: argv.r,
}, function (err, res) {
  if (err) {
    console.dir(err);
    if (err.stack) {
      console.dir(err.stack.split('\n'));
    }

    return process.exit(1);
  }

  fs.writeFileSync(
    path.join(__dirname, '..', '..', 'www', 'public', 'json', 'comp-stat', argv.p + '.json'),
    JSON.stringify(res, null, 2),
    'utf8'
  );

  console.dir(res);
})